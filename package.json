{
  "name": "react-native-record-speech",
  "version": "0.1.0",
  "description": "React Native library for detecting and recording speech",
  "source": "./src/index.js",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-record-speech-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "microphone",
    "record",
    "audio",
    "input",
    "speech"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomlangan/react-native-record-speech.git"
  },
  "author": "tomlangan <35125342+tomlangan@users.noreply.github.com> (https://github.com/tomlangan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomlangan/react-native-record-speech/issues"
  },
  "homepage": "https://github.com/tomlangan/react-native-record-speech#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/react": "^18.2.44",
    "del-cli": "^5.1.0",
    "react": "18.3.1",
    "react-native": "0.75.2",
    "release-it": "^15.0.0",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "create-react-native-library": {
    "type": "module-legacy",
    "languages": "kotlin-objc",
    "version": "0.41.0"
  }
}
